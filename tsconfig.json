{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "noEmit": true,
    "types": ["node", "chrome"],
    "outDir": "dist",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}